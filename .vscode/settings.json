{
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/build/": true,
    "lib": true,
    ".nyc_output": true,
    "coverage": true,
    "node_modules": true
  },
  "search.exclude": {
    "coverage": true,
    ".nyc_output": true
  },
  "eslint.autoFixOnSave": true
}
